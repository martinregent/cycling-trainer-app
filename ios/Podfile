# Define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

begin
  require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)
  flutter_ios_podfile_setup
rescue => e
  puts "Warning: Could not load Flutter podhelper: #{e.message}"
  puts "Attempting to continue without it..."
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  begin
    flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  rescue => e
    puts "Warning: flutter_install_all_ios_pods failed: #{e.message}"
    puts "Adding Flutter framework manually..."
    # Manually add Flutter framework
    pod 'Flutter', :path => File.expand_path('Flutter', __dir__)
  end
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  begin
    installer.pods_project.targets.each do |target|
      begin
        flutter_additional_ios_build_settings(target)
      rescue => e
        puts "Warning: flutter_additional_ios_build_settings failed: #{e.message}"
      end
    end
  rescue => e
    puts "Warning: post_install ios_build_settings failed: #{e.message}"
  end

  # Fix for CocoaPods permission issues with xcschemes on macOS Sequoia
  begin
    xcuserdata_path = installer.pods_project.project_dir + 'xcuserdata'
    if xcuserdata_path.exist?
      system("chmod -R u+w #{xcuserdata_path.shellescape}")
    end
    # Also fix project.pbxproj permissions
    pbxproj_path = File.join(Dir.pwd, 'Runner.xcodeproj', 'project.pbxproj')
    if File.exist?(pbxproj_path)
      system("chmod u+w #{pbxproj_path.shellescape}")
    end
  rescue => e
    puts "Warning: chmod failed: #{e.message}"
  end
end
